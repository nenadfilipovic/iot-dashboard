generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Device {
  id            Int           @default(autoincrement()) @id
  user_id       String
  device_id     String        @unique
  name          String        @unique
  description   String?
  location_lat  Float?
  location_long Float?
  type          Device_type
  status        Device_status @default(active)
  modified_at   DateTime      @default(now())
  created_at    DateTime      @default(now())
}

enum Device_type {
  esp32
  esp8266
  arduino
}

enum Device_status {
  active
  disabled
}
